#!/bin/sh

exit_code=0

if [ $UNSTRUMENT ]; then
    regex="aos\.y.*\.d.*(?<!data)"
    exclude_flag="-e"
    exclude_pattern="instrumented"
else
    regex="aos\.instrument|aos\.y.*\.d.*(?<!data)"
fi

echo "=== Running clojure tests $exclude"
clojure -R:test:test-clj \
        -e "(require,'patch.clj-2443)" \
        -m cognitect.test-runner -d src -r "$regex" \
        "$exclude_flag" "$exclude_pattern"

if [ $? -eq 1 ]; then
    exit_code=1
fi

echo "\n=== Running cljs tests"
mkdir -p cljs-test-runner-out/gen
clojure -R:test:test-cljs \
        -m cljs-test-runner.main -d src -r "$regex" \
        "$exclude_flag" "$exclude_pattern" \
        -c cljs-opts.edn

if [ $? -eq 1 ]; then
    exit_code=1
fi

exit $exit_code
